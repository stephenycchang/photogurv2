<h1>Edit Item</h1>

<p>
  <%= link_to "Back", @item %>
</p>

<%= form_for @item do |f| %>
<p>
  <%= f.label "sku" %><br>
  <%= f.text_field "sku" %>
</p>
<p>
  <%= f.label "description" %><br>
  <%= f.text_field "description" %>
</p>
<p>
  <%= f.label "url" %><br>
  <%= f.text_field "url" %>
</p>
<p>
  <%= f.submit "Save" %>
</p>
<% end %>